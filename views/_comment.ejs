<li id="comment-<%=comment._id%>" class=" new-comment-section">
    <p>
        <% if ( locals.user && locals.user.id == comment.user.id ){ %>
        <small>
            <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>">
                <button name="Delete">X</button>
            </a>
        </small>
        <% } %>
        <span class="comment-content">
            <%= comment.content%>
        </span>
        <br />
        <small class="comment-username">
            <%=comment.user.name%>
        </small>

        <small>
            <% if (locals.user){ %>
            <a class="toggle-like-button" data-likes="<%= comment.likes.length %>"
                href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                <%= comment.likes.length %> Likes
            </a>
            <% }else{ %>
            <%= comment.likes.length %> Likes
            <% } %>
        </small>

    </p>
</li>